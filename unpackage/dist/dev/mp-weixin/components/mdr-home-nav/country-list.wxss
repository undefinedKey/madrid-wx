.title-content {
  font-weight: bold;
}
.box-listview {
  display: flex;
  height: 70vh;
  position: relative;
}
.box-listview .listview-left {
  width: 220rpx;
  z-index: 99;
}
.box-listview .listview-left .left-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background-color: #f6f8fa;
}
.box-listview .listview-left .active {
  transition: 0.3s;
  background-color: #ffffff;
}
.box-listview .listview-right {
  flex: 1;
  display: flex;
}
.box-listview .listview-right .active {
  color: #7e9bd5;
}

